# 1. Update packages
sudo apt update -y
sudo apt upgrade -y

# 2. Install unzip (required for AWS CLI zip package)
sudo apt install unzip -y

# 3. Download AWS CLI v2
curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"

# 4. Unzip installer
unzip awscliv2.zip

# 5. Install AWS CLI v2
sudo ./aws/install

# 6. Verify installation
aws --version

# 7. Configure AWS CLI with your credentials
aws configure
